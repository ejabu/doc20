<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="mdr_internal_status_search" model="ir.ui.view">
            <field name="name">mdr.pivot.search</field>
            <field name="model">mdr.pivot</field>
            <field name="arch" type="xml">
                <search >
                    <field name="discipline"/>
                    <group expand="1" string="Group By">
                        <filter string="Discipline" context="{'group_by': ['external_status', 'discipline']}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="mdr_internal_status_pivot" model="ir.ui.view">
            <field name="name">mdr.pivot.pivot</field>
            <field name="model">mdr.pivot</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <pivot disable_linking="True">
                    <!-- <field name="discipline" type="row"/> -->
                    <field name="external_status" type="row"/>
                    <field name="count" type="measure"/>
                </pivot>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_mdr_internal_status">
            <field name="name">Internal Status</field>
            <field name="res_model">mdr.pivot</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot,graph</field>
            <field name="search_view_id" ref="mdr_internal_status_search"/>
            <field name="view_id"></field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="action_mdr_internal_status_pivot">
            <field eval="3" name="sequence"/>
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="mdr_internal_status_pivot"/>
            <field name="act_window_id" ref="action_mdr_internal_status"/>
        </record>

        <!-- <record id="mdr_internal_status_tree" model="ir.ui.view">
            <field name="name">mdr.pivot.tree</field>
            <field name="model">mdr.pivot</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="discipline"/>
                    <field name="count"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="action_mdr_internal_status_tree">
            <field eval="3" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="mdr_internal_status_tree"/>
            <field name="act_window_id" ref="action_mdr_internal_status"/>
        </record> -->

    </data>
</openerp>
