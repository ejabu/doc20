<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_order_product_pivot" model="ir.ui.view">
         <field name="name">mdr.pivot.pivot</field>
         <field name="model">mdr.pivot</field>
         <field name="arch" type="xml">
             <pivot disable_linking="True">
                 <field name="discipline" type="col"/>
                 <field name="sched_date" interval="month" type="row"/>
                 <field name="nbr" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="action_mdr_pivot" model="ir.actions.act_window">
        <field name="name">MDR Analysis</field>
        <field name="res_model">mdr.pivot</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id"></field>  <!-- force empty -->
        <!-- <field name="search_view_id" ref="view_order_product_search"/> -->
        <field name="context">{}</field>
        <!-- <field name="context">{'search_default_Sales':1, 'group_by_no_leaf':1,'group_by':[]}</field> -->
    </record>

    <menuitem name="Pivot" action="action_mdr_pivot" id="menu_mdr_pivot" parent="main_ddc" sequence="10"/>

</data>
</openerp>
