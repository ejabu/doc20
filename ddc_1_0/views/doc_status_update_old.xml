<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>



        <record id="master_deliver_search_2" model="ir.ui.view">
            <field name="name">document.status.update.search</field>
            <field name="model">master.deliver</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Doc Number"/>
                    <field name="discipline" string="Discipline"/>
                    <field name="doc_type" string="Doc Type"/>
                    <field name="idc_number" string="IDC"/>
                    <field name="trans_number" string="Outgoing Transmittal Number"/>
                    <field name="recv_trans_number" string="Incoming Transmittal Number"/>
                    <field name="doc_status" string="Status"/>
                    <field name="external_status" string="External Status"/>
                    <field name="originator" string="Originator"/>

                    <group expand="0" string="Group By">
                        <filter name="group_by_name" string="Doc Number" domain="[]" context="{'group_by':'name'}"/>
                        <filter name="group_by_disc" string="Discipline" domain="[]" context="{'group_by':'discipline'}"/>
                        <filter name="group_by_categ" string="Category" domain="[]" context="{'group_by':'doc_categ'}"/>
                        <filter name="group_by_sub" string="Subsystem" domain="[]" context="{'group_by':'doc_sub'}"/>
                        <filter name="group_by_idc" string="IDC Number" domain="[]" context="{'group_by':'idc_number'}"/>
                        <filter name="group_by_send" string="Send Transmittal Number" domain="[]" context="{'group_by':'trans_number'}"/>
                        <filter name="group_by_rece" string="Receive Transmittal Number" domain="[]" context="{'group_by':'recv_trans_number'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Tree view for the menuitem -->
        <record id="master_deliver_tree_2" model="ir.ui.view">
            <field name="name">document.status.update.tree</field>
            <field name="model">master.deliver</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="discipline" invisible="1"/>
                    <field name="doc_categ" invisible="1"/>
                    <field name="doc_sub" invisible="1"/>
                    <field name="name"/>
                    <field name="doc_title"/>
                    <field name="doc_type"/>
                    <field name="doc_type_desc" invisible="1"/>
                    <field name="doc_status"/>
                    <field name="created_date"/>

                    <field name="sched_date" invisible="1"/>
                    <field name="originator" invisible="1"/>

                </tree>
            </field>
        </record>
        <!-- Form view for the menuitem -->
        <record id="master_deliver_form_2" model="ir.ui.view">
            <field name="name">document.status.update.form</field>
            <field name="model">master.deliver</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form>
                    <header>

                    </header>

                    <group colspan="4" col="4">
                        <group >
                            <field name="discipline" readonly="1"/>
                            <field name="doc_categ" readonly="1"/>
                            <field name="doc_sub" readonly="1"/>
                        </group>
                        <group >
                            <field name="doc_pred" readonly="1"/>
                            <field name="alt_doc" readonly="1"/>
                            <field name="doc_type" readonly="1"/>
                            <field name="doc_type_desc" readonly="1"/>
                            <field name="sched_plan" readonly="1"/>

                        </group>
                    </group>
                    <group colspan="4" col="4">
                        <group >
                            <field name="name" readonly="1"/>
                            <field name="doc_title" readonly="1"/>
                        </group>
                        <group >
                        </group>
                    </group>
                    <group colspan="4" col="4">
                        <group string="IDC">
                            <field name="idc_number"/>
                            <field name="send_date"/>
                            <field name="sched_date"/>
                            <field name="rece_date"/>
                        </group>
                        <group string="Transmittal">
                            <field name="recv_trans_number"/>
                            <field name="recv_rece_date"/>
                            <br/>
                            <br/>
                            <field name="trans_number"/>
                            <field name="trans_date"/>
                            <field name="due_date"/>
                            <field name="recipient_rece_date"/>
                        </group>
                    </group>
                    <h3>Notes</h3>
                    <field name="notes"/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                </form>
            </field>
        </record>




        <record model="ir.actions.act_window" id="doc_status_update_action">
            <field name="name">Document Status Update</field>
            <field name="res_model">master.deliver</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="master_deliver_search_2"/>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="view_mode">tree,form</field>
        </record>


        <record model="ir.actions.act_window.view" id="doc_status_update_action_tree">
        			<field eval="3" name="sequence"/>
        			<field name="view_mode">tree</field>
        			<field name="view_id" ref="master_deliver_tree_2"/>
                    <field name="act_window_id" ref="doc_status_update_action"/>
        </record>

		<record model="ir.actions.act_window.view" id="doc_status_update_action_form">
			<field eval="4" name="sequence"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="master_deliver_form_2"/>
            <field name="act_window_id" ref="doc_status_update_action"/>
		</record>


    </data>
</openerp>
