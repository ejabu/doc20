<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Tree view for the menuitem -->
        <record id="doc_idc_in_tree" model="ir.ui.view">
            <field name="name">doc.idc.in.tree</field>
            <field name="model">doc.idc</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="send_date"/>
                </tree>
            </field>
        </record>
        <!-- Form view for the menuitem -->
        <record id="doc_idc_in_form" model="ir.ui.view">
            <field name="name">doc.idc.in.form</field>
            <field name="model">doc.idc</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form>
                    <header>


                    </header>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="send_date"/>
                            </group>
                            <group></group>
                        </group>
                        <!-- <field name="line_ids" domain="[('idc_id','=',False)]" options="{'not_delete': True}"> -->
                        <field
                            name="line_ids"
                            domain="[('idc_id','=',False)]"
                            widget="many2many"
                            options='{"not_delete": True}'
                            >
                            <tree editable="bottom">
                                <field name="name" readonly="1"/>
                                <field name="doc_title" readonly="1"/>
                                <field name="discipline" readonly="1" options="{'no_open': True}"/>
                                <field name="doc_type" readonly="1" options="{'no_open': True}"/>
                                <field name="doc_status" readonly="1" options="{'no_open': True}" string="Internal Status"/>
                                <field name="rev_num" readonly="1" options="{'no_open': True}" string="Current Revision"/>
                                <field name="rece_date" string="Return Date"/>
                                <field name="status_comment"/>
                                <field name="originator" readonly="1" options="{'no_open': True}"/>

                            </tree>
                        </field>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="doc_idc_in_action">
            <field name="name">IDC Incoming</field>
            <field name="res_model">doc.idc</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record model="ir.actions.act_window.view" id="doc_idc_in_action_tree">
            <field eval="3" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="doc_idc_in_tree"/>
            <field name="act_window_id" ref="doc_idc_in_action"/>
        </record>


        <record model="ir.actions.act_window.view" id="doc_idc_in_action_form">
			<field eval="4" name="sequence"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="doc_idc_in_form"/>
            <field name="act_window_id" ref="doc_idc_in_action"/>
        </record>
    </data>
</openerp>
