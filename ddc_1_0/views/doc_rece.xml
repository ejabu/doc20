<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Tree view for the menuitem -->
        <record id="doc_rece_tree" model="ir.ui.view">
            <field name="name">doc.rece.tree</field>
            <field name="model">doc.rece</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="recv_rece_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!-- Form view for the menuitem -->
        <record id="doc_rece_form" model="ir.ui.view">
            <field name="name">doc.rece.form</field>
            <field name="model">doc.rece</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="send_doc" string="Send" type="object" class="oe_highlight" states='new'/>
                        <field name="state" widget="statusbar"/>

                    </header>
                        <group>
                            <field name="name"/>
                            <field name="recv_rece_date"/>
                        </group>
                        <field name="line_ids" domain="[('rece_id','=',False)]" widget="many2many" options="{'not_delete': True}">
                            <tree editable="bottom">
                                <field name="name" readonly="1"/>
                                <field name="doc_title" readonly="1"/>
                                <field name="discipline" readonly="1"/>
                                <field name="doc_type" readonly="1"/>
                                <field name="doc_status"/>
                                <field name="rev_num" />
                                <field name="recv_comment" />
                                <field name="originator" readonly="1"/>

                            </tree>
                        </field>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="doc_rece_action">
            <field name="name">Doc Rece</field>
            <field name="res_model">doc.rece</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</openerp>
